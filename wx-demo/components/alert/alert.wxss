/* components/alert/alert.wxss */
.alert-bg {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.2);
  z-index: 100;
}
.alert-box {
  width: 75%;
  max-height: 70%;
  background: #fff;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}
/* .alert-content {
  padding: 15rpx;
} */
.alert-text {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  margin: 10rpx 0;
  min-height: 300rpx;
}
.alert-btn {
  display: flex;
  font-size: 36rpx;
  border-top: 1px solid #777; 
}
.flex-btn {
  display: inline-flex;
  box-sizing: border-box;
  justify-content: center;
  align-items: center;
  height: 110rpx;
  width: 100%;
}
.cancle-btn {
  width: 50%;
}
.sure-btn {
  width: 50%;
}

